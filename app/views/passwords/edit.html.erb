<h1>Edit Password</h1>

<%= form_with model: @user, url: edit_password_path, local: true, data: { turbo: false } do |form| %>
<% if @user.errors.any? %>
<div class="alert alert-danger">
    <h4>There were errors with your submission:</h4>
    <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
</div>

<div class="mb-3">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
</div>

<div class="mb-3">
    <%= form.submit "Update Password", class: "btn btn-primary" %>
</div>
<% end %>